<%= form_for [:admin, @categoria] do |f| %>
  <% if @categoria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@categoria.errors.count, "error") %> prohibited this categoria from being saved:</h2>

      <ul>
      <% @categoria.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, :class => 'viraSlug' %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug, :class => 'souSlug' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
