<h1>Lista de categorias</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td><%= categoria.nome %></td>
    <td><%= categoria.slug %></td>
    <td><%= link_to 'Mostrar', [:admin, categoria] %></td>
    <td><%= link_to 'Editar', edit_admin_categoria_path(categoria) %></td>
    <td><%= link_to 'Deletar', [:admin, categoria], confirm: 'Tem certeza que deseja excluir esta categoria?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

