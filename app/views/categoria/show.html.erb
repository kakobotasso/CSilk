<% content_for :title do %> <%= "#{@categoria.nome} - CSilkBrindes" %> <% end %>

<% content_for :bread do %>
  <%= link_to "Ínicio", root_path %> > 
  <%= @categoria.nome %>
<% end %>

<!-- PRODUTOS CATEGORIA -->
<div id="direitaProdutos">
    <div id="produtosCategoria">
        <ul>
            <% @produtos.each do |p| %>
              <li class="<%= cycle("","", "terceira") %>">
                  <div class="guardaImagemProduto">
                    <% if p.fotos.any? %>
                    <%= link_to image_tag(p.fotos.first.picture.url(:medio), :alt => p.nome ), produto_path(@categoria.slug, p.slug) %>
                    <% end %>
                  </div>

                  <a href="<%= produto_path(@categoria.slug, p.slug) %>" class="guardaInfosProduto">
                      <span class='nomeProduto'><%= p.nome %></span>
                      <span class='descProduto'> <%= desc(p) %></span>
                  </a>
              </li>
            <% end %>
        </ul>
    </div>
</div>
<!-- / PRODUTOS CATEGORIA -->